{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@patient/*": ["./src/patient/*"],
      "@doctors/*": ["./src/doctors/*"],
      "@appointments/*": ["./src/appointments/*"],
      "@common/*": ["./src/common/*"]
    },
  },
  "include": ["./.eslintrc.js", "src/**/**/*.ts", "tests/**/**/*.ts"],
}
